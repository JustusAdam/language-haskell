{
	"name": "language-haskell",
    "displayName": "Haskell Syntax Highlighting",
	"description": "Syntax highlighting and snipptes for the Haskell programming language.",
	"version": "1.0.0",
    "publisher": "justusadam",
	"engines": {
		"vscode": "^0.10.1"
	},
	"icon": "images/logo.svg",
    "galleryBanner": {
        "color": "#293845",
        "theme": "dark"
    },
    "keywords": [
        "language", "haskell", "highlight", "syntax", "snippets"
    ],
    "license": "MIT",
    "homepage": "https://github.com/JustusAdam/language-haskell",
    "repository": {
        "type": "git",
        "url": "https://github.com/JustusAdam/language-haskell.git"
    },
    "bugs": {
        "url": "https://github.com/JustusAdam/language-haskell/issues",
        "email": "dev@justus.science"    
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
	"activationEvents": [
		"onLanguage:haskell"
	],
	"main": "./out/src/extension",
	"contributes": {
        "languages": [{
            "id": "haskell",
            "aliases": ["Haskell", "haskell"],
            "extensions": [".hs"],
            "configuration": "./haskell.configuration.json"
        }],
        "grammars": [{
            "language": "haskell",
            "scopeName": "source.haskell",
            "path": "./syntaxes/haskell.tmLanguage"
        }],
        "snippets": [{
            "language": "haskell",
            "path": "./snippets/haskell.json"
        }]
    },
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"devDependencies": {
		"typescript": "^1.6.2",
		"vscode": "0.10.x"
	}
}