{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "isBackground": false,
            "label": "npm",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": ["$tsc"]
        },
        {
            "type": "shell",
            "label": "make-json",
            "command": "./make_json.sh"
        },
        {
            "label": "compile-all",
            "dependsOn": ["npm", "make-json"]
        }
    ]
}
